{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "디버그: 서버 실행",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "env": {
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "restart": true,
            "runtimeArgs": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "디버그: 실행 중인 프로세스에 연결",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}

